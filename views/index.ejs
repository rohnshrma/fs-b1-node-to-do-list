<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>To Do List : <%= title %>
    </title>

    <!-- fa css -->

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css">


    <!-- bs css -->

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">

    <!-- custom css -->

    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
        <a href="/" class="navbar-brand">
            <%= heading %>
        </a>
    </nav>
    <div class="form wrapper">
        <form action="/" method="post">
            <div class="form-group">
                <input type="text" name="itemName" placeholder="New Item..." class="form-control">
            </div>
            <button class="btn btn-primary btn-block">Add Task <i class="fa-solid fa-plus"></i></button>
        </form>
    </div>

    <div id="main" class="wrapper">
        <% if(typeof items===typeof []){ %>
            <% items.forEach(function(item,index){ %>
                <div class="item">
                    <h2>
                        <%= item %>
                    </h2>
                    <a href="delete/<%=index %>" class="btn btn-link"><i class="fa-solid fa-trash delete-icon"></i></a>
                </div>
                <% }) %>
                    <% }else{ %>
                        <h2>No Items Found</h2>
                        <% } %>
    </div>



    <script src="/script.js"></script>
</body>

</html>